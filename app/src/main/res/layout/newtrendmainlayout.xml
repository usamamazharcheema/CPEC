<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:id="@+id/searchlayoutone"
        android:background="#5e9fa6"
        android:gravity="center">

        <TextView
            android:text="EXPLORE"
            android:textColor="#fff"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_below="@+id/searchlayoutone"
        android:layout_width="wrap_content"
android:id="@+id/two"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/trednforsale"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:background="@drawable/unselectedsort"
            android:text="for sale"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_40sdp" />
        <Button
            android:id="@+id/trendfortrending"
            android:background="@drawable/selectedsort"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:text="trending "
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_40sdp" />
    </LinearLayout>
    <ScrollView
        android:layout_below="@+id/two"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="@dimen/_53sdp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:id="@+id/industrialsearchfragmenr"
                    android:src="@drawable/industrialmainicon"
                    android:layout_marginRight="@dimen/_15sdp"
                    />

                <ImageView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:id="@+id/residentialsearchfragment"
                    android:src="@drawable/residentialmainicon"
                    android:layout_marginLeft="@dimen/_15sdp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:id="@+id/commertialsearchfragment"
                    android:src="@drawable/commertialmainicon"
                    android:layout_marginRight="@dimen/_15sdp"
                    />

                <ImageView
                    android:id="@+id/openlandsearchfragment"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:src="@drawable/openlandmainicon"
                    android:layout_marginLeft="@dimen/_15sdp"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>