<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2">
    <RelativeLayout
        android:id="@+id/theme"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/explore_top_view"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/theme"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:id="@+id/topheader"
        android:background="#A9A9A9"

        >
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/searchresiback"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/arrowback"
            />
        <TextView
            android:id="@+id/titleplotreserachfiltermain"
            android:textColor="#fff"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Residential"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_19sdp"
            android:background="@drawable/subcatogory"
            android:id="@+id/all"
            />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Town"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_19sdp"
        android:background="@drawable/subcatogory"
        android:id="@+id/newtown"
        />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sanghar"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_19sdp"
            android:background="@drawable/subcatogory"
            android:id="@+id/sanghar"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maanbar"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_19sdp"
            android:background="@drawable/subcatogory"
            android:id="@+id/Maanbar"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BECHS"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_19sdp"
            android:background="@drawable/subcatogory"
            android:id="@+id/Bechs"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Batail"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_19sdp"
            android:background="@drawable/subcatogory"
            android:id="@+id/Batail"
            />
    </LinearLayout>



</RelativeLayout>