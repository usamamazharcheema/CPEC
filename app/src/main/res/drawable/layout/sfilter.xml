<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_208sdp"
        android:orientation="vertical"

        android:background="@drawable/border"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_9sdp"
        android:layout_marginRight="@dimen/_9sdp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_7sdp"

            android:gravity="bottom"
            android:orientation="horizontal"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"

                android:gravity="left">

                <TextView
                    android:layout_centerVertical="true"
                    android:text="@string/title"
                    android:id="@+id/sfplottitle"
                    android:textSize="@dimen/_14sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/star"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="@dimen/_4sdp"
                android:id="@+id/sfimageView3" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_1sdp"

            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/_270sdp"
                android:layout_height="match_parent"
                android:background="#c2c2c2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2.4"

                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:gravity="top">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:id="@+id/ltextt"
                        android:textSize="@dimen/_12sdp"
                        android:text="Padizar Bolevard"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"

                    android:orientation="horizontal"
                    >

                    <Button

                        android:text="10000000"

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"

                        android:id="@+id/sfplotarea"
                        android:background="@drawable/areasqrbtn"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/_4sdp"
                    >
                    <Button
                        android:id="@+id/sfplotprice"
                        android:text="25 Lac-1.5 crore"
                        android:layout_weight="0.9"
                        android:background="@drawable/purchasepkrbtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Button
                        android:text="1000000000"
                        android:background="@drawable/leasebtn"
                        android:layout_width="match_parent"
                        android:layout_weight="1.1"
                        android:layout_height="match_parent" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_122sdp"
                android:layout_weight="0.6"
                android:layout_marginRight="@dimen/_10sdp"
                >

                <com.google.android.gms.maps.MapView
                    xmlns:map="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/sffmap"
                    map:cameraZoom="13"
                    map:mapType="normal"
                    map:liteMode="true"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1sdp"

            android:gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#c2c2c2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"

            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/view"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_weight="1"
                android:id="@+id/sfview"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/contact"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_weight="1"
                android:id="@+id/sfcontact"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>