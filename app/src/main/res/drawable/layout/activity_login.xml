<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C2628"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.example.fm.cpec.Login">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.6"
        android:background="#4AA4A1"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_25sdp"
            android:textColor="#FFFFFF"
            android:text="@string/login"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:gravity="center">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_marginLeft="@dimen/_21sdp"
                android:id="@+id/ima"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/emailg"
                />
            <EditText
                android:textColor="#b3b3b3"
                android:layout_width="@dimen/_224sdp"
                android:layout_height="wrap_content"
                android:hint="@string/email"
                android:id="@+id/email"
                android:textColorHint="#b3b3b3"
                android:textSize="@dimen/_16sdp"
                android:layout_toRightOf="@+id/ima"
                android:layout_marginLeft="@dimen/_10sdp"
                />

        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_34sdp"
                android:layout_marginLeft="@dimen/_23sdp"
                android:layout_marginTop="@dimen/_9sdp"
                android:id="@+id/imag"
                android:background="@drawable/password"
                />
            <android.support.design.widget.TextInputLayout

                android:id="@+id/password1"
                android:layout_toRightOf="@+id/imag"
                android:layout_width="@dimen/_224sdp"
                android:textColorHint="#b3b3b3"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                app:passwordToggleEnabled="true">

                <EditText
                    android:layout_width="@dimen/_224sdp"
                    android:layout_height="wrap_content"
                    android:hint="@string/password"
                    android:textColor="#b3b3b3"
                    android:textColorHint="#b3b3b3"
                    android:textSize="@dimen/_16sdp"
                    android:layout_toRightOf="@+id/imag"
                    android:id="@+id/password"

                    />
            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.6"
        android:gravity="center">
        <Button
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_50sdp"
            android:text="@string/enter"
            android:id="@+id/btn_submit"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_21sdp"

            android:background="@drawable/loginsignup1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:gravity="center">
        <TextView
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:text="@string/forgot"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_12sdp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">
        <TextView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:text="@string/connect"
            android:gravity="center"
            android:textColor="#b3b3b3"
            android:textSize="@dimen/_14sdp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10">
        <Button
            android:layout_width="@dimen/_50sdp"
            android:layout_height="match_parent"
            android:id="@+id/facebook"
            android:background="@drawable/facebook"
            android:layout_marginRight="@dimen/_12sdp" />

        <Button
            android:layout_width="@dimen/_50sdp"
            android:layout_height="match_parent"
            android:background="@drawable/gmail"
            android:id="@+id/gmail_signin"
            android:layout_marginLeft="@dimen/_12sdp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.5"></LinearLayout>
</LinearLayout>