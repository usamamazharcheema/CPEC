        android:layout_marginTop="@dimen/_15sdp"
        android:layout_gravity="center"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:hint="@string/near"
        android:id="@+id/neartext"

        android:paddingLeft="@dimen/_15sdp"
        />
    <EditText
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/_15sdp"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:hint="@string/signname"
        android:id="@+id/commertialname"
        />
    <EditText
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/_15sdp"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:hint="@string/Phone"
        android:id="@+id/commertialphone"
        />

    <TextView
        android:layout_marginTop="@dimen/_15sdp"

        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="@string/additionalinfo"
        />
        <EditText
            android:layout_marginTop="@dimen/_15sdp"
            android:id="@+id/commertialadditional"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:paddingLeft="@dimen/_15sdp"
            android:layout_gravity="center_horizontal"
            android:lines="5"
            android:background="@drawable/additionback"
            />
   <Button
       android:layout_marginTop="@dimen/_15sdp"
       android:layout_marginBottom="@dimen/_8sdp"
       android:layout_width="@dimen/_100sdp"
       android:layout_height="@dimen/_50sdp"
       android:text="@string/sub"
       android:textSize="@dimen/_18sdp"
       android:textColor="#FFFFFF"
       android:background="@drawable/submitbuton"
       android:id="@+id/commertialsubmit"
       android:layout_gravity="center_horizontal"
       />
