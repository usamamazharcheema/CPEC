<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2">
    <RelativeLayout
        android:id="@+id/theme"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/explore_top_view"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/theme"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:id="@+id/topheader"
        android:background="#A9A9A9"

        >
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/searchcmrback"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/arrowback"
            />
        <TextView
            android:id="@+id/titleplotcoserachfiltermain"
            android:textColor="#fff"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Commercial"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topheader"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_9sdp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"


        android:layout_centerInParent="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_19sdp"
            android:background="@drawable/subcatogory"
            android:id="@+id/call"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Town"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_19sdp"
            android:background="@drawable/subcatogory"
            android:id="@+id/cnewtown"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sanghar"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_19sdp"
            android:background="@drawable/subcatogory"
            android:id="@+id/csanghar"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maanbar"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_19sdp"
            android:background="@drawable/subcatogory"
            android:id="@+id/cMaanbar"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BECHS"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_19sdp"
            android:background="@drawable/subcatogory"
            android:id="@+id/cBechs"
            />
        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GIE"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_19sdp"
        android:background="@drawable/subcatogory"
        android:id="@+id/cBatail"
        />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Air Port Road"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_19sdp"
            android:background="@drawable/subcatogory"
            android:id="@+id/cair"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pishukan Avenue"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_19sdp"
            android:background="@drawable/subcatogory"
            android:id="@+id/cpis"
            />

    </LinearLayout>
    </ScrollView>



</RelativeLayout>