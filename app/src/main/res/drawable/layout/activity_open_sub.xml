<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2">
    <RelativeLayout
        android:id="@+id/theme"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/explore_top_view"
            />
        </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/theme"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:id="@+id/topheader"
        android:background="#A9A9A9"

        >
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/searcopenhback"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/arrowback"
            />
        <TextView
            android:id="@+id/titleplotopserachfiltermain"
            android:textColor="#fff"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open Land"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_19sdp"
            android:background="@drawable/subcatogory"
            android:id="@+id/oall"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="East Bay"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_19sdp"
            android:background="@drawable/subcatogory"
            android:id="@+id/oeast"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="West Bay"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_19sdp"
            android:background="@drawable/subcatogory"
            android:id="@+id/owest"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oil City"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_19sdp"
            android:background="@drawable/subcatogory"
            android:id="@+id/oMaanbar"
            />
    </LinearLayout>



</RelativeLayout>