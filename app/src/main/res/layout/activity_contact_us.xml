<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:gravity="top"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.42">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.26"
        android:background="@drawable/savabg"
        android:gravity="center"
        android:weightSum="5">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/cosearchcmrback"
            android:layout_weight="0.6"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/arrowback"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contactv"
            android:textAlignment="center"
            android:layout_weight="4.4"
            android:textColor="#ffffff"
            android:textSize="@dimen/_30sdp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.5"
        android:background="#f2f2f2"
        android:gravity="center|top"
        android:orientation="vertical">

        <Button
            android:id="@+id/dial"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="@dimen/_55sdp"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_51sdp"
            android:background="@drawable/dial" />

        <Button
            android:id="@+id/whatsapp"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="@dimen/_55sdp"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_17sdp"
            android:background="@drawable/whatsapp" />
    </LinearLayout>
</LinearLayout>