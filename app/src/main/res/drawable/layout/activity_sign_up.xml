<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C2628"
    android:orientation="vertical"
    android:weightSum="11"
    tools:context="com.example.fm.cpec.SignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.6"
        android:background="#4AA4A1"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_25sdp"
            android:textColor="#FFFFFF"
            android:text="@string/signupp"
            android:id="@+id/signup_header"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:gravity="center">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/_27sdp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_21sdp"
                android:id="@+id/ima"
                android:background="@drawable/snameimage"
                />
            <EditText
                android:layout_width="@dimen/_224sdp"
                android:layout_height="match_parent"
                android:hint="@string/signname"
                android:textColorHint="#b3b3b3"
                android:textColor="#b3b3b3"
                android:id="@+id/signupname"
                android:textSize="@dimen/_16sdp"
                android:layout_toRightOf="@+id/ima"
                android:layout_marginLeft="@dimen/_10sdp"
                />

        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_34sdp"
                android:layout_marginLeft="@dimen/_23sdp"
                android:layout_marginTop="@dimen/_9sdp"
                android:id="@+id/imag5"
                android:background="@drawable/emailg"
                />


            <EditText
                android:textColor="#b3b3b3"
                android:layout_width="@dimen/_224sdp"
                android:layout_height="match_parent"
                android:hint="@string/email"
                android:id="@+id/signupemail"
                android:textColorHint="#b3b3b3"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textSize="@dimen/_16sdp"
                android:layout_toRightOf="@+id/imag5"

                />


        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_34sdp"
                android:layout_marginLeft="@dimen/_23sdp"
                android:layout_marginTop="@dimen/_9sdp"
                android:id="@+id/imag3"
                android:background="@drawable/password"
                />
            <android.support.design.widget.TextInputLayout

                android:id="@+id/password1"
                android:layout_toRightOf="@+id/imag3"
                android:layout_width="@dimen/_224sdp"
                android:layout_height="match_parent"
                android:textColorHint="#b3b3b3"
                android:layout_marginLeft="@dimen/_10sdp"
                app:passwordToggleEnabled="true">

                <EditText
                    android:layout_width="@dimen/_224sdp"
                    android:layout_height="match_parent"
                    android:hint="@string/password"
                    android:id="@+id/signuppassword"
                    android:textSize="@dimen/_16sdp"
                    android:layout_toRightOf="@+id/imag"
                    android:textColor="#b3b3b3"
                    />
            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_34sdp"
                android:layout_marginLeft="@dimen/_23sdp"
                android:layout_marginTop="@dimen/_9sdp"
                android:id="@+id/imag6"
                android:background="@drawable/location"
                />


            <EditText
                android:textColor="#b3b3b3"
                android:layout_width="@dimen/_224sdp"
                android:layout_height="match_parent"
                android:hint="@string/location"
                android:id="@+id/location"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColorHint="#b3b3b3"
                android:textSize="@dimen/_16sdp"
                android:layout_toRightOf="@+id/imag6"

                />

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_34sdp"
                android:layout_marginLeft="@dimen/_23sdp"
                android:layout_marginTop="@dimen/_9sdp"
                android:id="@+id/imag7"
                android:background="@drawable/phoneno"
                />
            <EditText
                android:layout_width="@dimen/_224sdp"
                android:layout_height="match_parent"
                android:hint="@string/phone"
                android:id="@+id/phonenumber"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColorHint="#b3b3b3"
                android:textSize="@dimen/_16sdp"
                android:inputType="number"
                android:layout_toRightOf="@+id/imag7"
                android:textColor="#b3b3b3"
                />


        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.7"
        android:gravity="center">
        <Button
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_21sdp"
            android:id="@+id/submit"
            android:text="@string/submit"

            android:background="@drawable/loginsignup1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center">
        <TextView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_17sdp"
            android:text="@string/connect"
            android:gravity="center"
            android:textColor="#b3b3b3"
            android:textSize="@dimen/_14sdp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10">
        <Button
            android:layout_width="@dimen/_50sdp"
            android:layout_height="match_parent"
            android:id="@+id/fbsignup"
            android:background="@drawable/facebook"
            android:layout_marginRight="@dimen/_12sdp" />

        <Button
            android:layout_width="@dimen/_50sdp"
            android:layout_height="match_parent"
            android:background="@drawable/gmail"
            android:id="@+id/sign_In_button"
            android:layout_marginLeft="@dimen/_12sdp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.3"></LinearLayout>
</LinearLayout>