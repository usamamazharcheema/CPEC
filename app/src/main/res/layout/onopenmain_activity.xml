<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#f2f2f2"

    tools:context="com.example.fm.cpec.MainActivity">

    <RelativeLayout
        android:id="@+id/theme"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_56sdp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:src="@drawable/explore_top_view"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/theme"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:id="@+id/topheader"
        android:background="@drawable/savabg"

        >
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/back"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/arrowback"
            />
        <TextView
            android:id="@+id/titleplot"
            android:textColor="#fff"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SELL YOUR PROPERTY"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <ScrollView
        android:visibility="visible"
        android:id="@+id/mainscroll"
        android:scrollbars="none"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/topheader"
        android:layout_height="wrap_content">
        <LinearLayout

            android:layout_width="@dimen/_290sdp"
            android:layout_height="match_parent"

            android:orientation="vertical"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/_6sdp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_height="wrap_content">



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="title"
                        android:textSize="@dimen/_14sdp"
                        android:id="@+id/titleopentext"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />

                </RelativeLayout>
                <View
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="#d3d3d3"
                    ></View>
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                >



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_marginLeft="@dimen/_6sdp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="@dimen/_2sdp"
                        android:textColor="#4e4e4e"
                        android:text="description"
                        android:textSize="@dimen/_14sdp"
                        android:id="@+id/textView4" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_180sdp"

                    android:gravity="center">

                    <fragment
                        android:layout_width="@dimen/_280sdp"
                        android:layout_height="match_parent"
                        android:id="@+id/map"
                        tools:context=".MainActivity"
                        android:name="com.google.android.gms.maps.MapFragment" />
                </LinearLayout>


                <LinearLayout

                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_70sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:gravity="top"
                        android:orientation="vertical"
                        >



                        <LinearLayout
                            android:layout_width="@dimen/_280sdp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_3sdp"

                            android:gravity="center"
                            android:orientation="horizontal"
                            >

                            <Button
                                android:id="@+id/openpurchase"
                                android:background="@drawable/pricenew"
                                android:layout_width="@dimen/_140sdp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="@dimen/_4sdp"

                                />

                            <Button
                                android:id="@+id/openlease"
                                android:layout_width="@dimen/_140sdp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_4sdp"
                                android:background="@drawable/areanew"
                                />
                        </LinearLayout>




                    </LinearLayout>




                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/phoneopen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cu"
                    android:layout_marginBottom="@dimen/_1sdp" />

                <!--<Button-->
                    <!--android:background="@drawable/favoritebtn"-->
                    <!--android:layout_width="@dimen/_25sdp"-->
                    <!--android:layout_height="@dimen/_25sdp"-->
                    <!--android:layout_marginBottom="@dimen/_1sdp"-->
                    <!--android:layout_marginLeft="@dimen/_30sdp"-->
                    <!--android:layout_marginRight="@dimen/_30sdp"-->
                    <!--android:id="@+id/button2" />-->

                <!--<Button-->
                    <!--android:id="@+id/openmessage"-->
                    <!--android:background="@drawable/messageicon"-->
                    <!--android:layout_width="@dimen/_45sdp"-->
                    <!--android:layout_height="@dimen/_45sdp"-->
                    <!--android:layout_marginBottom="@dimen/_1sdp" />-->
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        android:indeterminateDrawable="@drawable/progress" >
    </ProgressBar>
</RelativeLayout>