<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:id="@+id/topheader"
        android:background="@drawable/savabg"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/carrowback"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/arrowback"
            />
        <TextView
            android:textColor="#fff"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SELL YOUR STOCK"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_below="@+id/topheader"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:orientation="vertical"
    >

    <EditText
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:id="@+id/newtitle"
        android:hint="Title"
        android:paddingLeft="@dimen/_15sdp"
        />
    <TextView
        android:layout_marginTop="@dimen/_15sdp"
        android:textColor="#000000"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="SELECT PROPERTY TYPE"
        />
    <LinearLayout
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"


            android:src="@drawable/indutrialicon"
            android:id="@+id/indusbtn"
            />
        <ImageView
            android:id="@+id/redbtn"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"

            android:src="@drawable/unselectedresidential"
            />
        <ImageView
            android:id="@+id/comertialbtn"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:src="@drawable/unselectedcommertial"
            />
        <ImageView
            android:id="@+id/openlandbtn"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:src="@drawable/unselectedopenland"
            />
    </LinearLayout>
