<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"


    >

    <RelativeLayout

        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_215sdp"
        android:id="@+id/onclickmain"
        android:layout_marginTop="@dimen/_7sdp"

        android:background="@drawable/border"

        android:layout_centerHorizontal="true">

        <View
            android:id="@+id/viewline1"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/_269sdp"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@+id/areaname"
            android:background="#e89c33"
            android:layout_marginTop="@dimen/_10sdp"
            >
        </View>
        <RelativeLayout

            android:background="#DCDCDC"
            android:paddingBottom="@dimen/_10sdp"
            android:id="@+id/textlayout"
            android:layout_below="@+id/viewline1"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/_270sdp"
            android:layout_height="wrap_content">



            <LinearLayout

                android:paddingLeft="@dimen/_25sdp"
                android:id="@+id/pricelayout"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:orientation="vertical"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#009245"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp"
                    android:layout_gravity="center"
                    android:text="@string/PURCHASE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:id="@+id/pricetext"
                    android:layout_gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:layout_width="@dimen/_108sdp"
                    android:background="#009245"
                    android:text="25 Lac-1.5 Crore"
                    android:gravity="center"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:paddingRight="@dimen/_28sdp"
                android:layout_toRightOf="@+id/pricelayout"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"

                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    android:textColor="#376899"
                    android:layout_gravity="center"
                    android:text="@string/lease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:id="@+id/areatext"
                    android:layout_gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:layout_width="@dimen/_104sdp"
                    android:background="#376899"
                    android:gravity="center"
                    android:text="10,000 Pkr"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
        <View
            android:id="@+id/viewline2"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/_269sdp"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@+id/textlayout"
            android:background="#e89c33"

            >
        </View>
        <LinearLayout
            android:paddingBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/viewline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:background="@drawable/phoneicon"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:id="@+id/phonemain"
                />
            <Button
                android:background="@drawable/star"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:id="@+id/favourite"/>
            <Button
                android:id="@+id/messagemain"
                android:background="@drawable/messageicon"
                android:layout_marginLeft="@dimen/_12sdp"

                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp" />
        </LinearLayout>

        <TextView
            android:id="@+id/regioname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Tow"

            android:layout_below="@+id/titlemain"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/areaname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Tow"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_below="@+id/regioname"
            android:layout_centerHorizontal="true" />

        <TextView
            android:paddingTop="@dimen/_10sdp"
            android:textColor="#000000"

            android:textStyle="bold"
            android:id="@+id/titlemain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200 Sq Yard Plot Available"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</RelativeLayout>